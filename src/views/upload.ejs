<form action="/upload" method="POST" enctype="multipart/form-data">
  <label for="file">Select a file:</label>
  <input type="file" id="file" name="file" accept="*" required>

  <label for="downloadName">Download Name:</label>
  <input type="text" id="downloadName" name="downloadName" maxlength="<%= DownloadLen %>" required>

  <label for="displayName">Display Name:</label>
  <input type="text" id="displayName" name="displayName" maxlength="<%= DisplayLen %>" required>

  <label for="index">Index:</label>
  <input type="checkbox" id="index" name="index">

  <button type="submit">Upload</button>
</form>